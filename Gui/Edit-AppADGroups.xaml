<Page Name="Window"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:componentmodel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
    <Page.Resources>
        <CollectionViewSource x:Key="CvsAppGrps">
            <CollectionViewSource.SortDescriptions>
                <componentmodel:SortDescription PropertyName="Name" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
        <CollectionViewSource x:Key="CvsAppList">
            <CollectionViewSource.SortDescriptions>
                <componentmodel:SortDescription PropertyName="Text" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
        <CollectionViewSource x:Key="CvsLog" />
        <CollectionViewSource x:Key="CvsSelectedGrps">
            <CollectionViewSource.SortDescriptions>
                <componentmodel:SortDescription PropertyName="Name" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>

        <sys:String x:Key="StrErrorUsersTitle">x</sys:String>
        <sys:String x:Key="StrGroupsTitle">x</sys:String>
        <sys:String x:Key="StrRemovedUsersTitle">x</sys:String>

        <Brush x:Key="DefaultFontColor">#FF444444</Brush>
        <sys:Double x:Key="ControlHeight">40</sys:Double>
        <Thickness x:Key="StdMargin">5</Thickness>

        <Style TargetType="Button"
               x:Key="BtnBaseStyle">
            <Setter Property="Foreground"
                    Value="{StaticResource DefaultFontColor}" />
            <Setter Property="Height"
                    Value="{StaticResource ControlHeight}" />
            <Setter Property="Margin"
                    Value="{StaticResource StdMargin}" />
            <Setter Property="Padding"
                    Value="10,5" />
        </Style>
        <Style TargetType="ItemsControl"
               x:Key="IcBaseStyle">
            <Setter Property="Margin"
                    Value="{StaticResource StdMargin}" />
            <Setter Property="Visibility"
                    Value="Visible" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=ItemsSource.Count}"
                             Value="0">
                    <Setter Property="Visibility"
                            Value="Collapsed" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style TargetType="ListBox"
               x:Key="LbBaseStyle">
            <Setter Property="Margin"
                    Value="{StaticResource StdMargin}" />
            <Setter Property="Margin"
                    Value="{StaticResource StdMargin}" />
        </Style>
        <Style TargetType="ListBoxItem">
            <Setter Property="Margin"
                    Value="0,0,0,2" />
        </Style>
        <Style TargetType="TextBlock"
               x:Key="TblBaseStyle">
            <Setter Property="Margin"
                    Value="{StaticResource StdMargin}" />
        </Style>
        <Style TargetType="TextBlock"
               x:Key="TblLogStyle"
               BasedOn="{StaticResource TblBaseStyle}">
            <Setter Property="Margin"
                    Value="0" />
            <Setter Property="Padding"
                    Value="5" />
        </Style>
        <Style TargetType="TextBlock"
               x:Key="TblTitleStyle"
               BasedOn="{StaticResource TblBaseStyle}">
            <Setter Property="FontSize"
                    Value="14" />
            <Setter Property="FontWeight"
                    Value="Bold" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
        </Style>
        <Style TargetType="TextBox"
               x:Key="TbBaseStyle">
            <Setter Property="AcceptsReturn"
                    Value="True" />
            <Setter Property="Margin"
                    Value="{StaticResource StdMargin}" />
            <Setter Property="TextWrapping"
                    Value="Wrap" />
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Margin="{StaticResource StdMargin}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="120" />
            </Grid.RowDefinitions>
            <TextBlock Name="TblApp"
                       Style="{StaticResource TblTitleStyle}"
                       Text="{Binding ElementName=Window, Path=DataContext.MsgTable.ContentTblApp}" />
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ComboBox Name="CbApp"
                          DisplayMemberPath="Text"
                          MaxDropDownHeight="{Binding ElementName=Window, Path=ActualHeight}"
                          ItemsSource="{Binding Source={StaticResource CvsAppList}}"
                          Margin="{StaticResource StdMargin}"
                          SelectedIndex="-1"
                          VerticalContentAlignment="Center">
                    <ComboBox.Style>
                        <Style TargetType="ComboBox">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=ItemsSource.Count}"
                                             Value="1">
                                    <Setter Property="SelectedIndex"
                                            Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ComboBox.Style>
                </ComboBox>
                <Button Name="BtnRefetchGroups"
                        Content="{Binding ElementName=Window, Path=DataContext.MsgTable.ContentBtnRefetchGroups}"
                        Grid.Column="1"
                        IsEnabled="True">
                    <Button.Style>
                        <Style TargetType="Button"
                               BasedOn="{StaticResource BtnBaseStyle}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=CbApp, Path=SelectedIndex}"
                                             Value="-1">
                                    <Setter Property="IsEnabled"
                                            Value="False" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            <TextBlock Name="TblAppGroupList"
                       Grid.Row="2"
                       Style="{StaticResource TblTitleStyle}"
                       Text="{Binding ElementName=Window, Path=DataContext.MsgTable.ContentTblAppGroupList}" />
            <ListBox Name="LbAppGroupList"
                     Grid.Row="3"
                     ItemsSource="{Binding Source={StaticResource CvsAppGrps}}"
                     ScrollViewer.PanningDeceleration="2"
                     ScrollViewer.PanningRatio="0.5"
                     Style="{StaticResource LbBaseStyle}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Path=Name}"
                                   ToolTip="{Binding Path=Tt}"
                                   ToolTipService.InitialShowDelay="0"
                                   ToolTipService.ShowDuration="2000" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBlock Name="TblCopyFromTitle"
                       Grid.Row="4"
                       Style="{StaticResource TblTitleStyle}"
                       Text="{Binding ElementName=Window, Path=DataContext.MsgTable.ContentTblCopyFromTitle}" />
            <Grid Grid.Row="5">
                <Grid.Style>
                    <Style TargetType="Grid">
                        <Setter Property="IsEnabled"
                                Value="True" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=LbAppGroupList, Path=ItemsSource.Count}"
                                         Value="0">
                                <Setter Property="IsEnabled"
                                        Value="False" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Grid.Style>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <TextBox Name="TbCopyFrom"
                         Panel.ZIndex="2"
                         VerticalContentAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox"
                               BasedOn="{StaticResource TbBaseStyle}">
                            <Setter Property="Grid.ColumnSpan"
                                    Value="1" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=Text.Length}"
                                             Value="0">
                                    <Setter Property="Grid.ColumnSpan"
                                            Value="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=ColumnDefinitions.Count}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
                <Path Name="PathCopyFromErrorInfo"
                      Data="M21 13H14.4L19.1 17.7L17.7 19.1L13 14.4V21H11V14.3L6.3 19L4.9 17.6L9.4 13H3V11H9.6L4.9 6.3L6.3 4.9L11 9.6V3H13V9.4L17.6 4.8L19 6.3L14.3 11H21V13Z"
                      Fill="LightGray"
                      Grid.Column="1"
                      Margin="{StaticResource StdMargin}"
                      Panel.ZIndex="1"
                      VerticalAlignment="Center">
                    <Path.Style>
                        <Style TargetType="Path">
                            <Setter Property="Visibility"
                                    Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=TbCopyFrom, Path=Text.Length}"
                                             Value="0">
                                    <Setter Property="Visibility"
                                            Value="Hidden" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Path.Style>
                </Path>
                <Button Name="BtnCopyFrom"
                        Content="{Binding ElementName=Window, Path=DataContext.MsgTable.ContentBtnCopyFrom}"
                        Grid.Column="2"
                        Panel.ZIndex="1"
                        ToolTipService.ShowDuration="2000">
                    <Button.Style>
                        <Style TargetType="Button"
                               BasedOn="{StaticResource BtnBaseStyle}">
                            <Setter Property="IsEnabled"
                                    Value="False" />
                            <Setter Property="ToolTip.IsOpen"
                                    Value="False" />
                            <Setter Property="Visibility"
                                    Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=PathCopyFromErrorInfo, Path=Fill}"
                                             Value="Green">
                                    <Setter Property="IsEnabled"
                                            Value="True" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsMouseOver}"
                                             Value="True">
                                    <Setter Property="ToolTip.IsOpen"
                                            Value="True" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding ElementName=TbCopyFrom, Path=Text.Length}"
                                             Value="0">
                                    <Setter Property="Visibility"
                                            Value="Hidden" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
                <TextBlock Name="TblCopyFromInfo"
                           Grid.ColumnSpan="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=ColumnDefinitions.Count}"
                           Grid.Row="1" Style="{StaticResource TblBaseStyle}"
                           TextWrapping="Wrap"/>
            </Grid>
            <TextBlock Name="TblGroupsChosen"
                       Grid.Row="6"
                       Style="{StaticResource TblTitleStyle}"
                       Text="{Binding ElementName=Window, Path=DataContext.MsgTable.ContentTblGroupsChosen}" />
            <ListBox Name="LbGroupsChosen"
                     DisplayMemberPath="Name"
                     Grid.Row="7"
                     ItemsSource="{Binding Source={StaticResource CvsSelectedGrps}}"
                     Style="{StaticResource LbBaseStyle}" />
        </Grid>
        <Grid Grid.Column="1"
              Margin="{StaticResource StdMargin}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition>
                    <RowDefinition.Style>
                        <Style TargetType="RowDefinition">
                            <Setter Property="Height"
                                    Value="Auto" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=TbComputer, Path=Visibility}"
                                             Value="Collapsed">
                                    <Setter Property="Height"
                                            Value="Auto" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </RowDefinition.Style>
                </RowDefinition>
                <RowDefinition>
                    <RowDefinition.Style>
                        <Style TargetType="RowDefinition">
                            <Setter Property="Height"
                                    Value="Auto" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=TbComputer, Path=Visibility}"
                                             Value="Collapsed">
                                    <Setter Property="Height"
                                            Value="Auto" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </RowDefinition.Style>
                </RowDefinition>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Name="TblUsersAddPermission"
                       Style="{StaticResource TblTitleStyle}"
                       Text="{Binding ElementName=Window, Path=DataContext.MsgTable.ContentTblUsersAddPermission}" />
            <TextBox Name="TxtUsersAddPermission"
                     Grid.Row="1"
                     Style="{StaticResource TbBaseStyle}" />
            <TextBlock Name="TblComputerTitle"
                       Grid.Row="2"
                       Style="{StaticResource TblTitleStyle}"
                       Text="{Binding ElementName=Window, Path=DataContext.MsgTable.ContentTblComputerTitle}"
                       Visibility="{Binding ElementName=TbComputer, Path=Visibility}" />
            <TextBox Name="TbComputer"
                     AcceptsReturn="False"
                     FontSize="14"
                     Grid.Row="3"
                     Height="{StaticResource ControlHeight}"
                     VerticalContentAlignment="Center"
                     TextWrapping="NoWrap">
                <TextBox.Style>
                    <Style TargetType="TextBox"
                           BasedOn="{StaticResource TbBaseStyle}">
                        <Setter Property="Visibility"
                                Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ElementName=CbApp, Path=SelectedItem.Tag.AddComputer, NotifyOnTargetUpdated=True}"
                                         Value="True">
                                <Setter Property="Visibility"
                                        Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </TextBox.Style>
            </TextBox>
            <TextBlock Name="TblUsersRemovePermission"
                       Grid.Row="4"
                       Style="{StaticResource TblTitleStyle}"
                       Text="{Binding ElementName=Window, Path=DataContext.MsgTable.ContentTblUsersRemovePermission}" />
            <TextBox Name="TxtUsersRemovePermission"
                     Grid.Row="5"
                     Style="{StaticResource TbBaseStyle}" />
            <Button Name="BtnPerform"
                    Content="{Binding ElementName=Window, Path=DataContext.MsgTable.ContentBtnPerform}"
                    Grid.Row="6"
                    IsEnabled="False"
                    Style="{StaticResource BtnBaseStyle}" />
            <Button Name="BtnUndo"
                    Content="{Binding ElementName=Window, Path=DataContext.MsgTable.ContentBtnUndo}"
                    Grid.Row="7"
                    Style="{StaticResource BtnBaseStyle}" />
        </Grid>
        <Grid Grid.Column="2"
              Margin="{StaticResource StdMargin}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <TextBlock Name="TblLog"
                       Style="{StaticResource TblTitleStyle}"
                       Text="{Binding ElementName=Window, Path=DataContext.MsgTable.ContentTblLog}" />
            <ScrollViewer Grid.Row="2"
                          Margin="{StaticResource StdMargin}"
                          VerticalScrollBarVisibility="Auto">
                <ItemsControl Name="IcLog"
                              Background="White"
                              BorderBrush="#FFABADB3"
                              BorderThickness="1"
                              ItemsSource="{Binding Source={StaticResource CvsLog}}">
                    <ItemsControl.Resources>
                        <Style TargetType="Border"
                               x:Key="BrdClick">
                            <EventSetter Event="PreviewMouseDown" />
                            <Setter Property="Background"
                                    Value="Transparent" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource Mode=Self}, Path=IsMouseOver}"
                                             Value="True">
                                    <Setter Property="Background"
                                            Value="LightCyan" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ItemsControl.Resources>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White">
                                <Border.Style>
                                    <Style TargetType="Border"
                                           BasedOn="{StaticResource BrdClick}">
                                        <Setter Property="BorderBrush"
                                                Value="Red" />
                                        <Setter Property="BorderThickness"
                                                Value="2" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding RelativeSource={RelativeSource Self}, Path=DataContext.ErrorUsers.Count}"
                                                         Value="0">
                                                <Setter Property="BorderBrush"
                                                        Value="Black" />
                                                <Setter Property="BorderThickness"
                                                        Value="0,2,0,0" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock FontSize="13"
                                               FontWeight="Bold"
                                               Style="{StaticResource TblLogStyle}"
                                               Text="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=DataContext.DateTime}" />
                                    <Border BorderThickness="2,2,0,0"
                                            Grid.Row="1">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0"
                                                                             EndPoint="1,1">
                                                            <LinearGradientBrush.GradientStops>
                                                                <GradientStopCollection>
                                                                    <GradientStop Color="Black"
                                                                                  Offset="0.0" />
                                                                    <GradientStop Color="#00F0F0F0"
                                                                                  Offset="1.1" />
                                                                </GradientStopCollection>
                                                            </LinearGradientBrush.GradientStops>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Style="{StaticResource TblLogStyle}"
                                                   Text="{Binding ElementName=Window, Path=DataContext.MsgTable.StrGroupsTitle}" />
                                    </Border>
                                    <ItemsControl Grid.Row="2"
                                                  ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=DataContext.Groups}"
                                                  Style="{StaticResource IcBaseStyle}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <Border BorderThickness="2,2,0,0"
                                            Grid.Row="3"
                                            Padding="0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0"
                                                                             EndPoint="1,1">
                                                            <LinearGradientBrush.GradientStops>
                                                                <GradientStopCollection>
                                                                    <GradientStop Color="Green"
                                                                                  Offset="0.0" />
                                                                    <GradientStop Color="#00F0F0F0"
                                                                                  Offset="1.1" />
                                                                </GradientStopCollection>
                                                            </LinearGradientBrush.GradientStops>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=DataContext.AddedUsers.Count}"
                                                                 Value="0">
                                                        <Setter Property="Visibility"
                                                                Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Name="TblAddedUsersTitle"
                                                   Text="{Binding ElementName=Window, Path=DataContext.MsgTable.ContentTblAddedUsersTitle}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock"
                                                       BasedOn="{StaticResource TblLogStyle}">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0"
                                                                                 EndPoint="1,1">
                                                                <LinearGradientBrush.GradientStops>
                                                                    <GradientStopCollection>
                                                                        <GradientStop Color="#00F0F0F0"
                                                                                      Offset="0.0" />
                                                                        <GradientStop Color="Green"
                                                                                      Offset="1.1" />
                                                                    </GradientStopCollection>
                                                                </LinearGradientBrush.GradientStops>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                    <ItemsControl Grid.Row="4"
                                                  ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=DataContext.AddedUsers}"
                                                  Style="{StaticResource IcBaseStyle}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <Border BorderThickness="2,2,0,0"
                                            Grid.Row="5"
                                            Padding="0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0"
                                                                             EndPoint="1,1">
                                                            <LinearGradientBrush.GradientStops>
                                                                <GradientStopCollection>
                                                                    <GradientStop Color="Cyan"
                                                                                  Offset="0.0" />
                                                                    <GradientStop Color="#00F0F0F0"
                                                                                  Offset="1.1" />
                                                                </GradientStopCollection>
                                                            </LinearGradientBrush.GradientStops>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=DataContext.RemovedUsers.Count}"
                                                                 Value="0">
                                                        <Setter Property="Visibility"
                                                                Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="{Binding ElementName=Window, Path=DataContext.MsgTable.StrRemovedUsersTitle}">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock"
                                                       BasedOn="{StaticResource TblLogStyle}">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <LinearGradientBrush StartPoint="0,0"
                                                                                 EndPoint="1,1">
                                                                <LinearGradientBrush.GradientStops>
                                                                    <GradientStopCollection>
                                                                        <GradientStop Color="#00F0F0F0"
                                                                                      Offset="0.0" />
                                                                        <GradientStop Color="Cyan"
                                                                                      Offset="1.1" />
                                                                    </GradientStopCollection>
                                                                </LinearGradientBrush.GradientStops>
                                                            </LinearGradientBrush>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Border>
                                    <ItemsControl Grid.Row="6"
                                                  ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=DataContext.RemovedUsers}"
                                                  Style="{StaticResource IcBaseStyle}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding}" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                    <Border BorderThickness="2,2,0,0"
                                            Grid.Row="7"
                                            Margin="{StaticResource StdMargin}"
                                            Padding="0">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="BorderBrush">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0"
                                                                             EndPoint="1,1">
                                                            <LinearGradientBrush.GradientStops>
                                                                <GradientStopCollection>
                                                                    <GradientStop Color="Red"
                                                                                  Offset="0.0" />
                                                                    <GradientStop Color="#00F0F0F0"
                                                                                  Offset="1.1" />
                                                                </GradientStopCollection>
                                                            </LinearGradientBrush.GradientStops>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=DataContext.ErrorUsers.Count}"
                                                                 Value="0">
                                                        <Setter Property="Visibility"
                                                                Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <StackPanel>
                                            <TextBlock Text="{Binding ElementName=Window, Path=DataContext.MsgTable.StrErrorUsersTitle}">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock"
                                                           BasedOn="{StaticResource TblLogStyle}">
                                                        <Setter Property="Background">
                                                            <Setter.Value>
                                                                <LinearGradientBrush StartPoint="0,0"
                                                                                     EndPoint="1,1">
                                                                    <LinearGradientBrush.GradientStops>
                                                                        <GradientStopCollection>
                                                                            <GradientStop Color="#00F0F0F0"
                                                                                          Offset="0.0" />
                                                                            <GradientStop Color="Red"
                                                                                          Offset="1.1" />
                                                                        </GradientStopCollection>
                                                                    </LinearGradientBrush.GradientStops>
                                                                </LinearGradientBrush>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                            <ItemsControl ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Border}, Path=DataContext.ErrorUsers}"
                                                          Style="{StaticResource IcBaseStyle}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding}" />
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>
